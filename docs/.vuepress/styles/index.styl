@import 'swagger-ui'
@import 'jwt-verifier'
@import 'browser-mockup'

body {
  line-height: 1.6;
}

h1
  margin-bottom: 24px !important

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  margin-top: 15px;
}

.grid > div {
  background-color: #F2F3F5;
  padding: 15px;
  border-radius: 6px;
  text-align: center;
}

.grid .browser-mockup {
  margin: 0;
  margin-bottom: 10px;
}

.theme-container.full-width .content__default {
  max-width: 1300px;
  padding: 0;
}

.theme-container.changelog .content__default {
  max-width: 1000px;
}

.changelog-wrapper {
  padding-top: 50px;
}

#api-doc-wrapper {
  padding-top: 1px;
}

.navbar .site-name {
  display: none;
}

.home .hero .action-button {
  color: #000 !important;
}

.navbar .logo {
  vertical-align: middle !important;
  height: 1.7rem !important;
}

a {
  color: #0B7E4D;
}

.u-flex
  display: flex

.u-col-1
  width: calc(100% * (1/12))
  flex-basis: calc(100% * (1/12))

.u-col-2
  width: calc(100% * (2/12))
  flex-basis: calc(100% * (2/12))

.u-col-3
  width: calc(100% * (3/12))
  flex-basis: calc(100% * (3/12))

.u-col-4
  width: calc(100% * (4/12))
  flex-basis: calc(100% * (4/12))

.u-col-5
  width: calc(100% * (5/12))
  flex-basis: calc(100% * (5/12))

.u-col-6
  width: calc(100% * (6/12))
  flex-basis: calc(100% * (6/12))

.u-col-7
  width: calc(100% * (7/12))
  flex-basis: calc(100% * (7/12))

.u-col-8
  width: calc(100% * (8/12))
  flex-basis: calc(100% * (8/12))

.u-col-9
  width: calc(100% * (9/12))
  flex-basis: calc(100% * (9/12))

.u-col-10
  width: calc(100% * (10/12))
  flex-basis: calc(100% * (10/12))

.u-col-11
  width: calc(100% * (11/12))
  flex-basis: calc(100% * (11/12))

.u-center
  text-align: center

.u-right
  text-align: right

.u-flex-align-center
  align-items: center

.u-lead
  font-size: 20px
  line-height: 32px

.u-huge
  margin-top: 60px !important
  margin-bottom: 20px !important
  font-weight: 600
  font-size: 64px
  line-height: 1.5

.u-small
  font-size: 14px !important
  line-height: 21px !important

.btn
  display: inline-block
  background-color: $black
  color: $white
  font-size: 20px
  line-height: 32px
  font-weight: 600
  padding: 10px 20px
  border-radius: 6px
  text-decoration: none !important

  &:hover
    background-color: #3d3e40

.btn--link
  background-color: transparent
  color: #003cff
  padding: 0

  &:hover
    text-decoration: underline !important
    background-color: transparent

.btn--cta
  background-color: #40f1a4
  color: $black
  border-radius: 999px
  padding: 15px 30px

  &:hover
    background-color: #88f6c7

.u-no-border
  border: 0

.u-margin-reg-bottom
  margin-bottom: 15px

.u-margin-big-bottom
  margin-bottom: 20px

.u-margin-huge-bottom
  margin-bottom: 40px

.u-margin-super-huge-bottom
  margin-bottom: 60px

.u-margin-no-top
  margin-top: 0

.article-list
  display: grid
  grid-template-columns: repeat(3, 1fr)
  gap: 30px
  margin: 20px 0 40px 0
  grid-row-gap: 60px

.link
  color: #003cff
  font-weight: 600
  font-size: 16px
  line-height: 1.5
  margin-top: 15px

.link--github,
.link--demo
  display: block
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  background-position: left center
  background-size: 24px
  background-repeat: no-repeat
  padding-left: 34px

.link--github
  background-image: url('data:image/png;base64,')

.link--demo
  background-image: url('data:image/png;base64,')

.link--img
  display: inline-flex
  align-items: center
  font-size: 20px
  line-height: 32px

  img
    width: 40px
    margin-right: 30px

