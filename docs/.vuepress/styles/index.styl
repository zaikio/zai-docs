  background-size: 24px
  background-position: left center
  background-repeat: no-repeat
  padding-left: 34px

.article-list__item
  position: relative
  display: flex
  flex-direction: column
  min-width: 0

  a > img
    border-radius: 10px
    transition: .2s ease box-shadow

  a:hover > img
    box-shadow: 0 12px 24px 0 rgba(0, 0, 0, .4)

  h3
    font-weight: 700
    font-size: 20px
    margin-bottom: 10px
    line-height: 30px

  p
    color: #6B6C6E
    font-size: 16px
    line-height: 25px
    margin: 0 0 20px

.article-list__item--content-wrapped
  h3, p, .article-list__item__footer
    padding-left: 10px
    padding-right: 10px

.article-list__item--box
  border-radius: 10px
  border: 1px solid #DADCE0
  padding: 20px

.article-list__item__footer
  align-content: flex-end
  flex-grow: 1
  display: flex
  flex-direction: column
  justify-content: flex-end

.u-clearfix
  clear: both

.float-article
  float: right
  width: 340px
  margin-left: 20px

  .article-list__item
    margin-bottom: 20px

.article-list > .article-list__item:nth-child(3n-2),
.article-list > .article-list__item:nth-child(3n-1)
  &::after
    position: absolute
    top: 0
    right: -15px
    content: ""
    display: block
    height: 100%
    width: 1px
    border-right: 1px solid #E2E2E5

.app-item-logo
  border-radius: 10px
  padding: 20px
  height: 100px
  transition: .2s ease box-shadow

  &:hover
    box-shadow: 0 12px 24px 0 rgba(0, 0, 0, .2)

  img
    box-shadow: 0 0 0 !important

.app-item-logo__logo
  height: 100px

.article-list__item:nth-of-type(4n - 3)
  .app-item-logo
    background-color: #E2B3FF

.article-list__item:nth-of-type(4n - 2)
  .app-item-logo
    background-color: #B3C4FF

.article-list__item:nth-of-type(4n - 1)
  .app-item-logo
    background-color: #FFE380

.article-list__item:nth-of-type(4n - 0)
  .app-item-logo
    background-color: #FFBD99

.app-item-logo-directory
  background-color: #ADFFDB !important

.app-item-logo-procurement_consumers
  background-color: #FFD9C7 !important

.app-item-logo-procurement_suppliers
  background-color: #FFEFB6 !important

.sidebar
  .sidebar-heading
    padding-left: 32px

  a.sidebar-link
    line-height: 1.7
    margin: 4px 0

    &:hover
      background-color: #F2F3F5
      color: $textColor

    &.active
      background-color: $accentColorLight
      color: $textColor

  .sidebar-sub-header
    a.sidebar-link
      margin-right: 10px
      border-radius: 6px
      width: auto
      display: block

      &.active
        background-color: transparent

.theme-default-content pre
  margin: 0.85rem 0 0 !important
  // background-color: #181818 !important;

.custom-block.tip
  background: #E8EDFF
  border-left: 10px solid #B3C4FF
  border-radius: 6px
  padding: 5px 20px

.custom-block.tip a
  color: #003CFF

.theme-default-content code
  background-color: rgba(27,31,35,0.06)

.theme-default-content:not(.custom)
  padding: 2em 2em 2em 3em

.el-tabs--border-card
  box-shadow: none !important

.el-tabs--border-card > .el-tabs__header .el-tabs__item.is-active
  color: #0b7e4d !important